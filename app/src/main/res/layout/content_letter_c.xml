<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.beckhaml.alphabet.letter_c"
    tools:showIn="@layout/activity_letter_c">

   <ScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scrollbars="none"
       android:id="@+id/scrollView">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/imageView"
                   android:src="@drawable/c_italy"
                   android:adjustViewBounds="true"
                   android:layout_marginBottom="728dp"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="QUESTION: What are the four countries that border Italy?"
                   android:textAlignment="center"
                   android:textSize="22dp"
                   android:id="@+id/textView5"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="298dp"
                   android:textStyle="bold"/>
               
               <CheckBox
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/textView5"
                   android:text="France, Germany, Austria, Belgium"
                   android:textSize="15sp"
                   android:id="@+id/check1"
                   android:layout_marginTop="25dp"/>

               <CheckBox
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Slovenia, England, Luxemborg, Hungary"
                   android:textSize="15sp"
                   android:layout_below="@+id/check1"
                   android:id="@+id/check2"/>

               <CheckBox
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/check2"
                   android:text="Wales, Sweden, Iran, Croatia"
                   android:textSize="15sp"
                   android:id="@+id/check3" />

               <CheckBox
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="France, Switzerland, Austria, Slovenia"
                   android:textSize="15sp"
                   android:layout_below="@+id/check3"
                   android:id="@+id/check4" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/textview6"
                   android:layout_below="@+id/check4"
                   android:text="QUESTION: List the countries from largest to smallest:"
                   android:textSize="20dp"
                   android:layout_marginTop="30dp"
                   android:textAlignment="center"
                   android:textStyle="bold"/>

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="Purple"
                   android:textAlignment="center"
                   android:layout_below="@+id/textview6"
                   android:id="@+id/editText5"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="50dp"
                   android:inputType="textCapWords"
                   android:singleLine="true"
                   android:imeOptions="actionNext"
                   android:padding="10dp"
                   android:background="#F5F5F5" />

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="Red"
                   android:textAlignment="center"
                   android:layout_below="@+id/editText5"
                   android:id="@+id/editText6"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:inputType="textCapWords"
                   android:singleLine="true"
                   android:imeOptions="actionNext"
                   android:padding="10dp"
                   android:background="#F5F5F5"
                   android:layout_marginTop="5dp"/>

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="Green"
                   android:textAlignment="center"
                   android:layout_below="@+id/editText6"
                   android:id="@+id/editText7"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:inputType="textCapWords"
                   android:singleLine="true"
                   android:imeOptions="actionNext"
                   android:padding="10dp"
                   android:background="#F5F5F5"
                   android:layout_marginTop="5dp"/>

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="Blue"
                   android:textAlignment="center"
                   android:layout_below="@+id/editText7"
                   android:id="@+id/editText8"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:inputType="textCapWords"
                   android:singleLine="true"
                   android:imeOptions="actionDone"
                   android:padding="10dp"
                   android:background="#F5F5F5"
                   android:layout_marginTop="5dp"/>

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/editText8"
                   android:text="CHECK"
                   android:layout_centerInParent="true"
                   android:layout_marginTop="90dp"
                   android:background="#FFA200"
                   android:padding="10dp"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:id="@+id/c_button"/>


           </RelativeLayout>
       </LinearLayout>
   </ScrollView>


</RelativeLayout>
