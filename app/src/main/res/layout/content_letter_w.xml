<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.beckhaml.alphabet.letter_w"
    tools:showIn="@layout/activity_letter_w">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/w_migration"
                    android:adjustViewBounds="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUESTION: This animal is part of the Great Migration where 2 million of its species migrate seasonally:"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:id="@+id/textView5"
                    android:layout_marginTop="36dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Salmon"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/check1"
                    android:layout_marginTop="33dp"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Wildebeest"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/check2"
                    android:layout_alignTop="@+id/check1"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView" />

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Monarch Butterfly"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/check3"
                    android:layout_below="@+id/check2"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView" />

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Penguins"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/check4"
                    android:layout_alignTop="@+id/check3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview6"
                    android:layout_below="@+id/check4"
                    android:text="QUESTION: This migration takes place across which grassland?"
                    android:textSize="20dp"
                    android:layout_marginTop="58dp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview6"
                    android:layout_marginTop="20dp"
                    android:text="Russian steppes"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:text="The Pampas"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Serengeti Plain"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button3"
                    android:layout_alignTop="@id/button1"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Northern Prairie"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button4"
                    android:layout_below="@id/button3"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView"

                    />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
