<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.beckhaml.alphabet.letter_b"
    tools:showIn="@layout/activity_letter_b"
    android:background="#FFFFFF">


    <ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/imageView"
                android:src="@drawable/b_map1"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUESTION: How many countries are in the United Kingdom"
                android:textAlignment="center"
                android:textSize="22dp"
                android:id="@+id/textView5"
                android:layout_marginTop="33dp"
                android:textStyle="bold"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:gravity="center"
                android:id="@+id/check1"
                android:layout_marginTop="33dp"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="center"
                android:id="@+id/check2"
                android:layout_alignTop="@+id/check1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:id="@+id/check3"
                android:layout_below="@+id/check2"
                android:layout_alignLeft="@+id/check2"
                android:layout_alignStart="@+id/check2" />

            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:gravity="center"
                android:id="@+id/check4"
                android:layout_alignTop="@+id/check3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview6"
                android:layout_below="@+id/check4"
                android:text="QUESTION: What are the four countries? Hint: Use the  colors"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/textview6"
                android:id="@+id/editText5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:background="#F5F5F5"
                android:drawableRight="@drawable/b_green"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/editText5"
                android:id="@+id/editText6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:background="#F5F5F5"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/b_purple"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/editText6"
                android:id="@+id/editText7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:background="#F5F5F5"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/b_yellow"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/editText7"
                android:id="@+id/editText8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:background="#F5F5F5"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/b_red"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText8"
                android:text="CHECK"
                android:layout_centerInParent="true"
                android:layout_marginTop="90dp"
                android:background="#03cc00"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/b_button"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>


    </RelativeLayout>
