<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.beckhaml.alphabet.letter_z"
    tools:showIn="@layout/activity_letter_z">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/z_hurricane"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="728dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUESTION: Hurricanes are caused by: "
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:id="@+id/textView5"
                    android:layout_marginTop="250dp"
                    android:textStyle="bold"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:text="Heavy rainfall occuring on ocean surface"
                    android:textSize="14sp"
                    android:id="@+id/check1"
                    android:layout_marginTop="25dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warm air rising causing an area of low pressure below"
                    android:textSize="14sp"
                    android:layout_below="@+id/check1"
                    android:id="@+id/check2"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/check2"
                    android:text="Whirlpools that are created in oceans near the equator"
                    android:textSize="14sp"
                    android:id="@+id/check3"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tornado with low air pressure mixes with cooler air on ocean surface"
                    android:textSize="14sp"
                    android:layout_below="@+id/check3"
                    android:id="@+id/check4"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/z_button"
                    android:text="check"
                    android:layout_below="@id/check4"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview6"
                    android:layout_below="@+id/check4"
                    android:text="QUESTION: Which name is NOT a real hurricane?"
                    android:textSize="20dp"
                    android:layout_marginTop="65dp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview6"
                    android:layout_marginTop="20dp"
                    android:text="Huricane Sandy"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:text="Huricane Irene"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Hurricane Wilfred"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button3"
                    android:layout_alignTop="@id/button1"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Hurricane Gustav"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button4"
                    android:layout_below="@id/button3"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUESTION: Which part of a hurricane is considered the safest region with low winds and clear skies?"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/button4"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="20dp"
                    android:text="Feeder bands"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button5"
                    android:text="Rain Bands"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="The eye"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button7"
                    android:layout_alignTop="@id/button5"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView"/>

                <Button
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Eye walls"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:id="@+id/button8"
                    android:layout_below="@id/button7"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
